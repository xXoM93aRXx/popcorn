<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Loading popup template -->
        <template id="popcorn_loading_popup" name="Popcorn Loading Popup">
            <div class="popcorn-popup-overlay">
                <div class="popcorn-popup-content">
                    <div class="text-center">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-3">Checking membership...</p>
                    </div>
                </div>
            </div>
        </template>

        <!-- Membership popup template -->
        <template id="popcorn_membership_popup" name="Popcorn Membership Popup">
            <div class="popcorn-popup-overlay">
                <div class="popcorn-popup-content">
                    <div class="popcorn-popup-header">
                        <h4 t-esc="title">Membership Required</h4>
                        <button type="button" class="btn-close btn-close-popup" aria-label="Close">
                            <span aria-hidden="true">Ã—</span>
                        </button>
                    </div>
                    <div class="popcorn-popup-body">
                        <p t-esc="message">You need an active membership to register for events.</p>
                        <div class="text-center mt-4">
                            <button type="button" class="btn btn-primary btn-get-membership">
                                <i class="fa fa-shopping-cart me-2"></i>Get Membership
                            </button>
                            <button type="button" class="btn btn-secondary btn-close ms-2">
                                <i class="fa fa-times me-2"></i>Close
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </template>
    </data>
</odoo>
