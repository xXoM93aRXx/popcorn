<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Event Form View -->
    <record id="popcorn_event_event_view_form" model="ir.ui.view">
        <field name="name">popcorn.event.event.form</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='right_event_details']" position="inside">
                <field name="host_id" placeholder="Select host for this event" widget="many2one_avatar"/>
                <field name="cancellation_deadline_hours" placeholder="24"/>
            </xpath>
        </field>
    </record>

    <!-- Event Tree View -->
    <record id="popcorn_event_event_view_tree" model="ir.ui.view">
        <field name="name">popcorn.event.event.tree</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="replace">
                <field name="host_id" readonly="1" widget="many2one_avatar"/>
            </xpath>
        </field>
    </record>

    <!-- Event Search View -->
    <record id="popcorn_event_event_view_search" model="ir.ui.view">
        <field name="name">popcorn.event.event.search</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="host_id"/>
            </xpath>
            <xpath expr="//filter[@name='myevents']" position="after">
                <filter string="My Hosted Events" name="myhostedevents" help="Events where I am the host" domain="[('host_id', '=', uid)]"/>
            </xpath>
            <xpath expr="//filter[@name='responsible']" position="after">
                <filter string="Host" name="host" context="{'group_by': 'host_id'}"/>
            </xpath>
        </field>
    </record>

    <!-- Event Kanban View -->
    <record id="popcorn_event_event_view_kanban" model="ir.ui.view">
        <field name="name">popcorn.event.event.kanban</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='fw-bold fs-5 o_text_overflow']" position="after">
                <div t-if="record.host_id.value" class="d-flex align-items-center ps-1">
                <field name="host_id" widget="many2one_avatar" class="me-2"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
