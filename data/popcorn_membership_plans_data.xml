        <!-- Upgrade relationships -->
        <!-- Experience Card can upgrade to all Gold Cards and Freedom Card -->
        <record id="membership_plan_experience" model="popcorn.membership.plan">
            <field name="can_upgrade_to_ids" eval="[
                (4, ref('membership_plan_90_gr')),
                (4, ref('membership_plan_90_gv')),
                (4, ref('membership_plan_180_gr')),
                (4, ref('membership_plan_180_gv')),
                (4, ref('membership_plan_365_gr')),
                (4, ref('membership_plan_365_gv')),
                (4, ref('membership_plan_freedom'))
            ]"/>
        </record>
        
        <!-- 90 GR can upgrade to higher Gold Cards -->
        <record id="membership_plan_90_gr" model="popcorn.membership.plan">
            <field name="can_upgrade_to_ids" eval="[
                (4, ref('membership_plan_90_gv')),
                (4, ref('membership_plan_180_gr')),
                (4, ref('membership_plan_180_gv')),
                (4, ref('membership_plan_365_gr')),
                (4, ref('membership_plan_365_gv'))
            ]"/>
        </record>
        
        <!-- 90 GV can upgrade to higher Gold Cards -->
        <record id="membership_plan_90_gv" model="popcorn.membership.plan">
            <field name="can_upgrade_to_ids" eval="[
                (4, ref('membership_plan_180_gr')),
                (4, ref('membership_plan_180_gv')),
                (4, ref('membership_plan_365_gr')),
                (4, ref('membership_plan_365_gv'))
