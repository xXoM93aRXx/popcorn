        <record id="membership_plan_180_gv" model="popcorn.membership.plan">
            <field name="can_upgrade_to_ids" eval="[
                (4, ref('membership_plan_365_gr')),
                (4, ref('membership_plan_365_gv'))
            ]"/>
        </record>
        
        <!-- 365 GR can upgrade to 365 GV -->
        <record id="membership_plan_365_gr" model="popcorn.membership.plan">
            <field name="can_upgrade_to_ids" eval="[
                (4, ref('membership_plan_365_gv'))
            ]"/>
        </record>
        
        <!-- Freedom Card can upgrade to specific Gold Cards (not 90 GR) -->
        <record id="membership_plan_freedom" model="popcorn.membership.plan">
            <field name="can_upgrade_to_ids" eval="[
                (4, ref('membership_plan_90_gv')),
                (4, ref('membership_plan_180_gr')),
                (4, ref('membership_plan_180_gv')),
                (4, ref('membership_plan_365_gr')),
