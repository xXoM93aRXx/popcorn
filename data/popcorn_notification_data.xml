        <!-- Gold Card - Always Visible Banner (45 days or less) -->
        <record id="notification_gold_banner_always" model="popcorn.notification">
            <field name="name">Gold Card Banner - Always Visible</field>
            <field name="sequence">10</field>
            <field name="notification_type">banner</field>
            <field name="title">Time to Renew Your Membership!</field>
            <field name="message"><![CDATA[
                <p>Hey {name},</p>
                <p>You have <strong>{days_until_expiry} days</strong> left on your <strong>Gold membership</strong>, renew it before {effective_end_date} to the same or bigger membership to get around 10% discount! Don't worry, the new card doesn't start until you want it to.</p>
            ]]></field>
            <field name="banner_position">top</field>
            <field name="banner_style">warning</field>
            <field name="auto_dismiss" eval="False"/>
            <field name="show_action_button" eval="False"/>
            <field name="show_once_per_session" eval="True"/>
            <field name="show_once_per_user" eval="False"/>
            <field name="active" eval="True"/>
        </record>
        
        <record id="notification_rule_gold_banner_quota" model="popcorn.notification.rule">
            <field name="name">Gold Banner - Unlimited Quota Mode</field>
            <field name="notification_id" ref="notification_gold_banner_always"/>
            <field name="sequence">1</field>
            <field name="model_id" ref="model_popcorn_membership"/>
            <field name="field_id" ref="popcorn.field_popcorn_membership__plan_quota_mode"/>
