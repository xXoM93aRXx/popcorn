<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Custom Paper Format for Contract Report -->
    <record id="popcorn_contract_paperformat" model="report.paperformat">
        <field name="name">Popcorn Contract Format</field>
        <field name="format">A4</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="orientation">Portrait</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
        <field name="default" eval="False"/>
    </record>

    <!-- Contract Report Action -->
    <record id="action_popcorn_contract_report" model="ir.actions.report">
        <field name="name">Service Contract</field>
        <field name="model">popcorn.contract</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">popcorn.popcorn_contract_report_template</field>
        <field name="report_file">popcorn.popcorn_contract_report_template</field>
        <field name="print_report_name">'Service Contract - %s' % (object.display_name)</field>
        <field name="binding_model_id" ref="model_popcorn_contract"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="popcorn_contract_paperformat"/>
    </record>
</odoo>
