<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="popcorn.PopcornSignatureDialog">
        <Dialog title="'Sign Contract'" size="'md'">
            <t t-set-slot="footer">
                <button class="btn btn-secondary" t-on-click="onClickCancel">
                    Cancel
                </button>
                <button class="btn btn-primary" t-on-click="onClickConfirm">
                    Sign Contract
                </button>
            </t>
            
            <div class="o_signature_dialog_content">
                <div class="mb-3">
                    <p class="text-muted">
                        Please draw your signature in the box below using your mouse or touch screen.
                    </p>
                </div>
                
                <div class="signature-canvas-container">
                    <canvas 
                        t-ref="signatureCanvas" 
                        class="signature-canvas"
                        width="600" 
                        height="200"/>
                </div>
                
                <div class="mt-3 text-end">
                    <button class="btn btn-sm btn-secondary" t-on-click="onClickClear">
                        <i class="fa fa-eraser"/> Clear Signature
                    </button>
                </div>
            </div>
        </Dialog>
    </t>
</templates>
